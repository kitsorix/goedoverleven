---
import { Home, BookOpen, Wrench, Search } from "lucide-react";
---

<nav
    class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-2 md:hidden z-50 pb-safe"
    aria-label="Mobiele navigatie"
>
    <ul class="flex justify-around items-center">
        <li>
            <a
                href="/"
                class="flex flex-col items-center text-gray-600 hover:text-green-600 transition-colors"
            >
                <Home className="w-6 h-6" aria-hidden="true" />
                <span class="text-[10px] sm:text-xs mt-1 font-medium">Home</span
                >
            </a>
        </li>
        <li>
            <a
                href="/kennisbank"
                class="flex flex-col items-center text-gray-600 hover:text-green-600 transition-colors"
            >
                <BookOpen className="w-6 h-6" aria-hidden="true" />
                <span class="text-[10px] sm:text-xs mt-1 font-medium"
                    >Kennis</span
                >
            </a>
        </li>
        <li>
            <a
                href="/tools"
                class="flex flex-col items-center text-gray-600 hover:text-green-600 transition-colors"
            >
                <Wrench className="w-6 h-6" aria-hidden="true" />
                <span class="text-[10px] sm:text-xs mt-1 font-medium"
                    >Tools</span
                >
            </a>
        </li>
        <li>
            <a
                href="/over-ons"
                class="flex flex-col items-center text-gray-600 hover:text-green-600 transition-colors"
            >
                <Search className="w-6 h-6" aria-hidden="true" />
                <span class="text-[10px] sm:text-xs mt-1 font-medium"
                    >Zoeken</span
                >
            </a>
        </li>
    </ul>
</nav>

<style>
    .pb-safe {
        padding-bottom: env(safe-area-inset-bottom, 0.5rem);
    }
</style>

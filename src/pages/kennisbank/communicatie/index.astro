---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import {
    MessageSquare,
    Radio,
    Globe,
    Smartphone,
    Users,
    ChevronRight,
    Signal,
} from "lucide-react";

const articles = [
    {
        title: "Noodradioâ€™s: Keuzehulp",
        description:
            "Batterijen, zonne-energie of een zwengel? Welke radio laat je niet in de steek?",
        href: "/kennisbank/communicatie/noodradio",
    },
    {
        title: "Internet Zonder Netwerk",
        description:
            "Wat als 4G/5G en Wi-Fi uitvallen? Zo blijf je toch online (of offline verbonden).",
        href: "/kennisbank/communicatie/offline-internet",
    },
    {
        title: "Beste Crisis Apps NL",
        description:
            "Welke apps moet je NU downloaden voordat het netwerk plat gaat?",
        href: "/kennisbank/communicatie/crisis-apps",
    },
    {
        title: "Portofoons: Wat is Legaal?",
        description:
            "Over afstanden, vergunningen en waarom een walkie-talkie je leven kan redden.",
        href: "/kennisbank/communicatie/portofoon-legaal",
    },
    {
        title: "Familie Noodplan Maken",
        description:
            "Waar spreken jullie af als niemand elkaar kan bellen? Strategie voor het gezin.",
        href: "/kennisbank/communicatie/familie-noodplan",
    },
    {
        title: "Noodsignalen",
        description: "Gezien en gehoord worden als technologie faalt.",
        href: "/kennisbank/communicatie/noodsignalen",
    },
];
---

<BaseLayout
    title="Communicatie bij Blackout: Blijf Verbonden | GoedOverleven.nl"
    description="Als het netwerk uitvalt, begint de onzekerheid. Ontdek hoe noodradio's, portofoons en offline plannen jou en je gezin veilig houden."
>
    <div class="bg-white py-16">
        <div class="container mx-auto px-4 max-w-5xl">
            <!-- Header -->
            <div class="mb-16">
                <nav
                    class="flex items-center space-x-2 text-sm text-gray-500 mb-8"
                >
                    <a href="/" class="hover:text-green-700">Home</a>
                    <ChevronRight className="w-4 h-4" />
                    <a href="/kennisbank" class="hover:text-green-700"
                        >Kennisbank</a
                    >
                </nav>

                <div
                    class="flex flex-col md:flex-row md:items-center gap-6 mb-8"
                >
                    <div
                        class="w-16 h-16 bg-orange-100 rounded-2xl flex items-center justify-center"
                    >
                        <Signal className="w-10 h-10 text-orange-600" />
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight"
                    >
                        Communicatie bij <span class="text-orange-600"
                            >Crisis</span
                        >
                    </h1>
                </div>

                <p class="text-xl text-gray-600 leading-relaxed mb-8">
                    Informatie is macht. In een noodsituatie is informatie
                    overleving. Als de zendmasten uitvallen en je WhatsApp niet
                    meer laadt, begint de onzekerheid. En onzekerheid leidt tot
                    angst. Zorg dat jij altijd een manier hebt om te zenden en
                    te ontvangen.
                </p>
            </div>

            <!-- Pillar Article Card -->
            <div class="mb-16">
                <h2
                    class="text-2xl font-bold text-gray-900 mb-8 flex items-center gap-3"
                >
                    <Radio className="text-orange-500" /> De Hoofdrolspeler
                </h2>
                <a
                    href="/kennisbank/communicatie/crisis-communicatie-gids"
                    class="group block bg-orange-900 rounded-3xl overflow-hidden hover:shadow-2xl transition-all duration-500"
                >
                    <div class="grid md:grid-cols-2">
                        <div class="p-8 md:p-12">
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-orange-400 text-orange-950 text-xs font-bold uppercase tracking-wider mb-6"
                            >
                                Complete Gids
                            </span>
                            <h3
                                class="text-3xl font-bold text-white mb-6 group-hover:text-orange-300 transition-colors"
                            >
                                Communicatie bij Noodsituaties: De Gids
                            </h3>
                            <p class="text-gray-400 text-lg mb-8">
                                Wat doe je als het netwerk plat ligt? Leer alles
                                over noodkanalen, informatiebronnen en hoe je
                                verbonden blijft met je dierbaren.
                            </p>
                            <span
                                class="text-orange-400 font-bold flex items-center gap-2"
                            >
                                Begin hier <ChevronRight
                                    className="w-5 h-5 group-hover:translate-x-2 transition-transform"
                                />
                            </span>
                        </div>
                        <div
                            class="bg-orange-600/20 flex items-center justify-center p-12"
                        >
                            <Signal
                                className="w-48 h-48 text-orange-400 opacity-20 group-hover:scale-110 group-hover:rotate-12 transition-transform duration-700"
                            />
                        </div>
                    </div>
                </a>
            </div>

            <!-- Sub Articles Grid -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-8">
                    Diepere Duik
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    {
                        articles.map((article) => (
                            <a
                                href={article.href}
                                class="p-6 bg-gray-50 rounded-2xl border border-gray-100 hover:bg-white hover:shadow-lg hover:border-orange-200 transition-all group"
                            >
                                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors">
                                    {article.title}
                                </h3>
                                <p class="text-gray-600 mb-4">
                                    {article.description}
                                </p>
                                <span class="text-sm font-bold text-orange-600 flex items-center gap-1 uppercase tracking-wider">
                                    Lees artikel{" "}
                                    <ChevronRight className="w-4 h-4" />
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

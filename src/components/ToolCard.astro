---
interface Props {
  title: string;
  description: string;
  icon?: any;
  image?: string;
  href: string;
}

const { title, description, icon: Icon, image, href } = Astro.props;
import { ArrowRight } from "lucide-react";
---

<a
  href={href}
  class="group bg-white rounded-xl p-5 border border-gray-200 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all block h-full"
>
  <div class="flex flex-col h-full">
    <div
      class="mb-4 h-32 rounded-lg overflow-hidden bg-gray-50 flex items-center justify-center p-4"
    >
      {
        Icon ? (
          <Icon className="w-12 h-12 text-green-700" aria-hidden="true" />
        ) : (
          <img
            src={image}
            alt={title}
            class="w-full h-full object-contain transform group-hover:scale-105 transition-transform duration-300"
          />
        )
      }
    </div>
    <h3
      class="text-lg font-bold text-gray-900 mb-2 leading-tight group-hover:text-green-700 transition-colors"
    >
      {title}
    </h3>
    <p class="text-gray-500 mb-4 text-xs sm:text-sm flex-grow leading-relaxed">
      {description}
    </p>
    <span
      class="text-green-700 font-semibold flex items-center text-sm gap-1 group-hover:gap-2 transition-all mt-auto"
    >
      Open tool <ArrowRight className="w-4 h-4" aria-hidden="true" />
    </span>
  </div>
</a>

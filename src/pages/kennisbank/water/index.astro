---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import {
    Droplets,
    Filter,
    Waves,
    Trash2,
    Users,
    ChevronRight,
} from "lucide-react";

const articles = [
    {
        title: "Regenwater Opvangen in Nederland",
        description:
            "Het regent hier genoeg, maar kun je het ook drinken? Zo doe je het veilig.",
        href: "/kennisbank/water/regenwater-opvangen",
    },
    {
        title: "Beste Waterfilters voor Nood",
        description:
            "Sawyer, Berkey of Lifestraw? We vergelijken de beste opties.",
        href: "/kennisbank/water/waterfilter-nood",
    },
    {
        title: "Drinkwater Zuiveren Zonder Stroom",
        description: "Koken, tabletten of UV? De beste methodes op een rij.",
        href: "/kennisbank/water/drinkwater-zuiveren",
    },
    {
        title: "Wat te Doen Zonder Water",
        description:
            "Als de kraan écht droog staat: overlevingstips en hygiëne.",
        href: "/kennisbank/water/wat-doen-zonder-water",
    },
    {
        title: "Hoeveel Water per Persoon?",
        description:
            "Reken uit wat je écht nodig hebt voor drinken, koken en wassen.",
        href: "/kennisbank/water/hoeveel-water-per-persoon",
    },
    {
        title: "Water Besparen tijdens Crisis",
        description: "Elke druppel telt. Zo beperk je je verbruik met 90%.",
        href: "/kennisbank/water/water-besparen-crisis",
    },
];
---

<BaseLayout
    title="Schoon Drinkwater bij Crisis: Opslag & Filtratie | GoedOverleven.nl"
    description="Wat als er geen water meer uit de kraan komt? Leer hoe je veilig water opslaat, filtert en zuivert voor je gezin. Praktische gidsen voor NL."
>
    <div class="bg-white py-16">
        <div class="container mx-auto px-4 max-w-5xl">
            <!-- Header -->
            <div class="mb-16">
                <nav
                    class="flex items-center space-x-2 text-sm text-gray-500 mb-8"
                >
                    <a href="/" class="hover:text-green-700">Home</a>
                    <ChevronRight className="w-4 h-4" />
                    <a href="/kennisbank" class="hover:text-green-700"
                        >Kennisbank</a
                    >
                </nav>

                <div
                    class="flex flex-col md:flex-row md:items-center gap-6 mb-8"
                >
                    <div
                        class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center"
                    >
                        <Droplets className="w-10 h-10 text-blue-600" />
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight"
                    >
                        Water Opslaan & <span class="text-blue-600"
                            >Zuiveren</span
                        >
                    </h1>
                </div>

                <p class="text-xl text-gray-600 leading-relaxed mb-8">
                    In Nederland zijn we gewend aan het beste kraanwater ter
                    wereld. Maar dat water komt er niet vanzelf. Zonder stroom
                    vallen de pompen uit. Zonder chemicaliën stopt de reiniging.
                    Ben jij voorbereid op het moment dat er alleen maar lucht
                    uit je kraan komt?
                </p>
            </div>

            <!-- Pillar Article Card -->
            <div class="mb-16">
                <h2
                    class="text-2xl font-bold text-gray-900 mb-8 flex items-center gap-3"
                >
                    <Waves className="text-blue-500" /> De Hoofdrolspeler
                </h2>
                <a
                    href="/kennisbank/water/water-opslag-huis"
                    class="group block bg-blue-900 rounded-3xl overflow-hidden hover:shadow-2xl transition-all duration-500"
                >
                    <div class="grid md:grid-cols-2">
                        <div class="p-8 md:p-12">
                            <span
                                class="inline-block px-3 py-1 rounded-full bg-blue-400 text-blue-950 text-xs font-bold uppercase tracking-wider mb-6"
                            >
                                Complete Gids
                            </span>
                            <h3
                                class="text-3xl font-bold text-white mb-6 group-hover:text-blue-300 transition-colors"
                            >
                                Water Opslaan in Huis: De Complete Gids
                            </h3>
                            <p class="text-gray-400 text-lg mb-8">
                                Hoeveel liter? Welke vaten? En hoe houd je het
                                jarenlang goed? Dit is de definitieve
                                handleiding voor je watervoorraad.
                            </p>
                            <span
                                class="text-blue-400 font-bold flex items-center gap-2"
                            >
                                Begin hier <ChevronRight
                                    className="w-5 h-5 group-hover:translate-x-2 transition-transform"
                                />
                            </span>
                        </div>
                        <div
                            class="bg-blue-600/20 flex items-center justify-center p-12"
                        >
                            <Droplets
                                className="w-48 h-48 text-blue-400 opacity-20 group-hover:scale-110 group-hover:rotate-12 transition-transform duration-700"
                            />
                        </div>
                    </div>
                </a>
            </div>

            <!-- Sub Articles Grid -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-8">
                    Diepere Duik
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    {
                        articles.map((article) => (
                            <a
                                href={article.href}
                                class="p-6 bg-gray-50 rounded-2xl border border-gray-100 hover:bg-white hover:shadow-lg hover:border-blue-200 transition-all group"
                            >
                                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                                    {article.title}
                                </h3>
                                <p class="text-gray-600 mb-4">
                                    {article.description}
                                </p>
                                <span class="text-sm font-bold text-blue-600 flex items-center gap-1 uppercase tracking-wider">
                                    Lees artikel{" "}
                                    <ChevronRight className="w-4 h-4" />
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

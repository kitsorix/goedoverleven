---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Privacybeleid | GoedOverleven.nl">
    <div class="bg-gray-50 py-16">
        <div class="container mx-auto px-4 max-w-3xl">
            <h1 class="text-4xl font-extrabold text-gray-900 mb-8">
                Privacybeleid
            </h1>
            <div
                class="bg-white p-8 rounded-3xl border border-gray-100 shadow-sm leading-relaxed text-gray-700"
            >
                <p>
                    GoedOverleven.nl respecteert je privacy. We verzamelen geen
                    persoonlijke gegevens via onze tools zonder jouw
                    toestemming. De informatie die je invult in onze calculators
                    blijft lokaal in je browser.
                </p>
            </div>
        </div>
    </div>
</BaseLayout>

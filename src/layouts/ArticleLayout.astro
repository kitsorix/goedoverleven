---
import BaseLayout from "./BaseLayout.astro";
import { Calendar, User, ChevronRight, Zap } from "lucide-react";

interface Props {
    title: string;
    description: string;
    publishDate?: string;
    category: string;
    categoryUrl: string;
    faq?: Array<{ question: string; answer: string }>;
    steps?: Array<{ name: string; text: string; image?: string }>;
}

const {
    title,
    description,
    publishDate = "2026-02-11",
    category,
    categoryUrl,
    faq,
    steps,
} = Astro.props;

const schema: any[] = [
    {
        "@context": "https://schema.org",
        "@type": "Article",
        headline: title,
        description: description,
        image: [
            new URL("/og-image.png", Astro.url).href, // Fallback to OG image
        ],
        author: {
            "@type": "Organization",
            name: "GoedOverleven",
            url: "https://goedoverleven.nl",
        },
        publisher: {
            "@type": "Organization",
            name: "GoedOverleven",
            logo: {
                "@type": "ImageObject",
                url: new URL("/logo.png", Astro.url).href,
            },
        },
        datePublished: publishDate,
        dateModified: publishDate,
        inLanguage: "nl-NL",
        publisher: {
            "@type": "Organization",
            name: "GoedOverleven",
            logo: {
                "@type": "ImageObject",
                url: new URL("/logo.png", Astro.url).href,
            },
        },
        mainEntityOfPage: {
            "@type": "WebPage",
            "@id": Astro.url.href,
        },
    },
    {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: [
            {
                "@type": "ListItem",
                position: 1,
                name: "Home",
                item: new URL("/", Astro.url).href,
            },
            {
                "@type": "ListItem",
                position: 2,
                name: "Kennisbank",
                item: new URL("/kennisbank", Astro.url).href,
            },
            {
                "@type": "ListItem",
                position: 3,
                name: category,
                item: new URL(categoryUrl, Astro.url).href,
            },
            {
                "@type": "ListItem",
                position: 4,
                name: title,
                item: Astro.url.href,
            },
        ],
    },
];

if (faq) {
    schema.push({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        mainEntity: faq.map((item) => ({
            "@type": "Question",
            name: item.question,
            acceptedAnswer: {
                "@type": "Answer",
                text: item.answer,
            },
        })),
    });
}

if (steps) {
    schema.push({
        "@context": "https://schema.org",
        "@type": "HowTo",
        name: title,
        description: description,
        step: steps.map((step, index) => ({
            "@type": "HowToStep",
            position: index + 1,
            name: step.name,
            itemListElement: [
                {
                    "@type": "HowToDirection",
                    text: step.text,
                },
            ],
            image: step.image,
        })),
    });
}
---

<BaseLayout
    title={`${title} | GoedOverleven.nl`}
    description={description}
    type="article"
>
    <!-- Schema.org -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)}
    ></script>

    <article class="pt-8 pb-16">
        <div class="container mx-auto px-4 max-w-4xl">
            <!-- Breadcrumbs -->
            <nav
                class="flex items-center space-x-2 text-sm text-gray-500 mb-8"
                aria-label="Breadcrumb"
            >
                <a href="/" class="hover:text-green-700">Home</a>
                <ChevronRight className="w-4 h-4" aria-hidden="true" />
                <a href="/kennisbank" class="hover:text-green-700">Kennisbank</a
                >
                <ChevronRight className="w-4 h-4" aria-hidden="true" />
                <a href={categoryUrl} class="hover:text-green-700"
                    >{category}
                </a>
            </nav>

            <!-- Header -->
            <header class="mb-12">
                <div
                    class="inline-block px-3 py-1 rounded-full bg-green-100 text-green-700 text-sm font-semibold mb-4"
                >
                    {category}
                </div>
                <h1
                    class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6 leading-tight"
                    id="article-title"
                >
                    {title}
                </h1>
                <div class="flex items-center text-gray-500 space-x-6 text-sm">
                    <div class="flex items-center">
                        <User className="w-4 h-4 mr-2" aria-hidden="true" />
                        <span>Redactie GoedOverleven</span>
                    </div>
                    <div class="flex items-center">
                        <Calendar className="w-4 h-4 mr-2" aria-hidden="true" />
                        <time datetime={publishDate}
                            >{
                                new Date(publishDate).toLocaleDateString(
                                    "nl-NL",
                                    {
                                        day: "numeric",
                                        month: "long",
                                        year: "numeric",
                                    }
                                )
                            }
                        </time>
                    </div>
                </div>
            </header>

            <!-- AI-Optimized TL;DR / Summary -->
            <div
                class="mb-12 p-6 bg-green-50 rounded-2xl border border-green-100"
                data-ai-role="summary"
                id="tldr"
            >
                <h2
                    class="text-lg font-bold text-green-800 mb-2 flex items-center gap-2"
                >
                    <Zap className="w-5 h-5" /> In het kort (TL;DR)
                </h2>
                <p class="text-green-900 leading-relaxed">
                    {description}
                </p>
            </div>

            <!-- Content -->
            <div
                class="prose prose-lg prose-green max-w-none"
                data-ai-role="main-content"
                id="article-content"
            >
                <slot />
            </div>

            <!-- Client-side script to ensure all headings have IDs for AI citation -->
            <script is:inline>
                document.addEventListener("DOMContentLoaded", () => {
                    const content = document.getElementById("article-content");
                    if (!content) return;
                    const headings = content.querySelectorAll("h2, h3, h4");
                    headings.forEach((heading) => {
                        if (!heading.id) {
                            heading.id = heading.textContent
                                .toLowerCase()
                                .replace(/[^\w\s-]/g, "")
                                .replace(/\s+/g, "-");
                        }
                    });
                });
            </script>

            <!-- Bottom CTA/Section -->
            <div
                class="mt-16 p-8 bg-orange-50 rounded-3xl border border-orange-100"
            >
                <h2 class="text-2xl font-bold text-gray-900 mb-4">
                    Klaar voor de volgende stap?
                </h2>
                <p class="text-gray-700 mb-6">
                    Zelfredzaamheid is geen angst, maar actie. Heb je je
                    noodpakket al op orde?
                </p>
                <div class="flex flex-wrap gap-4">
                    <a
                        href="/tools/noodpakket-calculator"
                        class="px-6 py-3 bg-green-700 text-white font-bold rounded-xl hover:bg-green-800 transition-colors"
                    >
                        Noodpakket Calculator â†’
                    </a>
                    <a
                        href="/kennisbank"
                        class="px-6 py-3 bg-white text-gray-900 font-bold border border-gray-200 rounded-xl hover:bg-gray-50 transition-colors"
                    >
                        Bekijk alle gidsen
                    </a>
                </div>
            </div>
        </div>
    </article>
</BaseLayout>

<style is:global>
    @reference "../styles/global.css";
    /* Custom prose styling to match the site's aesthetic */
    .prose h2 {
        @apply text-3xl font-bold mt-12 mb-6 text-gray-900;
    }
    .prose h3 {
        @apply text-2xl font-bold mt-8 mb-4 text-gray-800;
    }
    .prose p {
        @apply mb-6 leading-relaxed text-gray-700;
    }
    .prose ul {
        @apply list-disc list-inside mb-6 space-y-2 text-gray-700;
    }
    .prose ol {
        @apply list-decimal list-inside mb-6 space-y-2 text-gray-700;
    }
    .prose strong {
        @apply text-gray-900 font-bold;
    }
    .prose blockquote {
        @apply border-l-4 border-orange-400 pl-4 py-1 italic bg-orange-50 rounded-r-lg mb-6;
    }
</style>

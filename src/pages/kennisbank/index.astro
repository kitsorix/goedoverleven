---
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
    Zap,
    Droplets,
    Utensils,
    MessageSquare,
    Brain,
    Shield,
} from "lucide-react";

const clusters = [
    {
        title: "Energie & Stroom",
        description: "Bereid je voor op stroomuitval en blackout situaties.",
        icon: Zap,
        href: "/kennisbank/energie",
        color: "bg-yellow-100 text-yellow-700",
    },
    {
        title: "Water",
        description: "Alles over water opslaan, zuiveren en filteren.",
        icon: Droplets,
        href: "/kennisbank/water",
        color: "bg-blue-100 text-blue-700",
    },
    {
        title: "Voedsel",
        description: "Noodvoorraad aanleggen en voedselveiligheid.",
        icon: Utensils,
        href: "/kennisbank/voedsel",
        color: "bg-green-100 text-green-700",
    },
    {
        title: "Communicatie",
        description: "Blijf verbonden als het netwerk uitvalt.",
        icon: MessageSquare,
        href: "/kennisbank/communicatie",
        color: "bg-orange-100 text-orange-700",
    },
    {
        title: "Mentaal",
        description: "Mentale weerbaarheid en rust tijdens een crisis.",
        icon: Brain,
        href: "/kennisbank/mentaal",
        color: "bg-purple-100 text-purple-700",
    },
    {
        title: "Digitaal & Cyber",
        description: "Bescherm je data en digitale middelen.",
        icon: Shield,
        href: "/kennisbank/digitaal",
        color: "bg-indigo-100 text-indigo-700",
    },
];
---

<BaseLayout
    title="Kennisbank Zelfredzaamheid: Alles over Overleven in NL"
    description="Dé centrale plek voor gidsen over energie, water, voedsel en veiligheid. Leer hoe je jezelf en je naasten beschermt in elke situatie."
>
    <div class="bg-gray-50 py-16">
        <div class="container mx-auto px-4">
            <header class="max-w-3xl mb-16">
                <h1
                    class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6"
                >
                    Kennisbank <span class="text-green-700"
                        >Zelfredzaamheid</span
                    >
                </h1>
                <p class="text-xl text-gray-600 leading-relaxed">
                    Kennis is je belangrijkste hulpmiddel. Hier vind je
                    diepgaande gidsen over hoe je jezelf en je familie
                    voorbereidt op onverwachte situaties in Nederland.
                </p>
            </header>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    clusters.map((cluster) => (
                        <a
                            href={cluster.href}
                            class="group bg-white p-8 rounded-3xl border border-gray-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
                        >
                            <div
                                class={`w-14 h-14 rounded-2xl ${cluster.color} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform`}
                            >
                                <cluster.icon className="w-8 h-8" />
                            </div>
                            <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-green-700 transition-colors">
                                {cluster.title}
                            </h2>
                            <p class="text-gray-600 mb-6 leading-relaxed">
                                {cluster.description}
                            </p>
                            <span class="text-green-700 font-bold flex items-center gap-2">
                                Lees gidsen{" "}
                                <span class="group-hover:translate-x-1 transition-transform">
                                    →
                                </span>
                            </span>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</BaseLayout>
